{% extends 'base.html.twig' %}



{% block title %}
{{ parent() }}
Car Offer
{% endblock %}

{% block body %}
                <h1>
                    <span>
                        Offer List
                    </span>
                </h1>

                <div class="float-right">
                    {{ form_start(form, { attr: { class: 'form-inline' } }) }}
                    {{ form_widget(form.search, { attr : { placeholder: 'Search' }}) }}
                    <button type="submit" class="btn btn-light">Search</button>
                    {{ form_end(form) }}
                </div>

                <h3>List of our cars</h3>

                <table class="table">
                    <tr>
                        <th>Mark</th>
                        <th>Model</th>
                        <th>Info</th>
                    </tr>
                    {% for car in cars %}
                        <tr>
                            <td>{{ car.make.name }} </td>
                            <td>{{ car.model.name }} </td>
                            <td>
                                <a href="{{url( 'show_car', {id: car.id} ) }}">
                                    Show details
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>

{% endblock %}



